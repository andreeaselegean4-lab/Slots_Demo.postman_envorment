					"listen": "test",
					"script": {
						"id": "8e64d3e1-2501-4e0b-93e1-723ad13e4c6c",
						"exec": [
							"// Parse JSON format to object",
							"const response = pm.response.json();",
							"",
							"// Test 1: Request successful",
							"pm.test(\"Spin request successful\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// Test 2: Response structure",
							"pm.test(\"Response has required fields\", function () {",
							"    pm.expect(response).to.have.property('payload');",
							"    const payload = response.payload;",
							"    ",
							"    pm.expect(payload).to.have.property('display');",
							"    pm.expect(payload).to.have.property('win');",
							"    pm.expect(payload).to.have.property('bet');",
							"});",
							"",
							"// Test 3: Validate spin data",
							"pm.test(\"Spin data is valid\", function () {",
							"    const payload = response.payload;",
							"    ",
							"    // Check reels display is an array with 5 reels",
							"    pm.expect(payload.display).to.be.an('array');",
							"    pm.expect(payload.display.length).to.equal(5);",
							"    ",
							"    // Check win amount is a non-negative number",
							"    pm.expect(payload.win).to.be.a('number');",
							"    pm.expect(payload.win).to.be.at.least(0);",
							"});",
							"",
							"// Test 4: Bet data exists",
							"pm.test(\"Bet data exists and is valid\", function () {",
							"    const payload = response.payload;",
							"    pm.expect(payload.bet).to.be.an('object');",
							"    pm.expect(payload.bet.value).to.be.a('number');",
							"    pm.expect(payload.bet.amount).to.be.a('number');",
							"});",
							"",
							"// Log spin result",
							"console.log(\"\\n=== SPIN RESULT ===\");",
							"console.log(\"Bet Value:\", response.payload.bet.value);",
							"console.log(\"Bet Amount:\", response.payload.bet.amount);",
							"console.log(\"Win Amount:\", response.payload.win);",
							"console.log(\"Reels Display:\", response.payload.display);",
							"",
							"if (response.payload.win > 0) {",
							"    console.log(\"âœ“ WINNING SPIN\");",
							"    if (response.payload.wins && response.payload.wins.length > 0) {",
							"        console.log(\"Winning Lines:\", response.payload.wins);",
							"    }",
							"} else {",
							"    console.log(\"No win this round\");",
							"}",
							"",
							"// Simple statistics - just track counts and totals",
							"let totalSpins = pm.collectionVariables.get(\"totalSpins\") || 0;",
							"let totalWins = pm.collectionVariables.get(\"totalWins\") || 0;",
							"let totalWinAmount = pm.collectionVariables.get(\"totalWinAmount\") || 0;",
							"",
							"totalSpins++;",
							"if (response.payload.win > 0) {",
							"    totalWins++;",
							"    totalWinAmount += response.payload.win;",
							"}",
							"",
							"pm.collectionVariables.set(\"totalSpins\", totalSpins);",
							"pm.collectionVariables.set(\"totalWins\", totalWins);",
							"pm.collectionVariables.set(\"totalWinAmount\", totalWinAmount);",
							"",
							"// Simple summary ",
							"console.log(`\\n=== SUMMARY (${totalSpins} spins) ===`);",
							"console.log(`Total Wins: ${totalWins}`);",
							"console.log(`Total Won: ${totalWinAmount}`);"
						],
